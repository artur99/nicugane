<!DOCTYPE html>
<html lang="ro">
<head>
    {% include 'part/head.twig' %}
</head>
<body class="landing">
    {% include 'part/header.twig' %}

    <div class="header">
        <div class="headerin">
            <h1>{{title}}</h1>
            <span class="bcnav">
                <a href="{{l('/')}}">CNNG</a>
                <i class="material-icons">&#xE315;</i>
                <a href="#">{{title}}</a>
            </span>
        </div>
    </div>
    <div class="sec">
        <div class="cin">

            <h2 class="subtitle">Evenimentele Noastre</h2>
            <div class="lines"></div>
            <div class="crlist">
                {% for item in data %}
                    {% if item.link %}
                        <a href="{{item.link}}" class="crlistitem light-effect-p z-depth-1">
                    {% else %}
                        <a href="{{l('/evenimente/'~item.id~'-'~(item.title|slugify))}}" class="crlistitem light-effect-p z-depth-1">
                    {% endif %}
                        <div class="crlist-header light-effect" {{item.image ? ('style="'~gen_bgcss(item.image)~'"')|raw}}></div>
                        <div class="crlist-cont">
                            <h3>{{item.title}}</h3>
                            <div>
                                <p>{{item.content|striptags|truncate(100)}}</p>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>

    {% include 'part/footer.twig' %}

    {% include 'part/scripts.twig' %}
</body>
</html>
